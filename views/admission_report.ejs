<%- include('partials/header') %>
<%- include('partials/reportSearch') %>
			<!-- Tab content -->
			<div class="updateTabcontent">
				<h2>CHILD ADMISSION RECORDS</h2>
				<div class="visitors-content">
					<table>
						<thead>
							<tr>
								<th>No</th>
								<th>Date Admitted</th>
								<th>Ward</th>
								<th>Specialist in Charge</th>
								<th colspan="3">Action</th>
							</tr>
						</thead>

						<tbody>
							<% let num = 0 %>
							<% admissions.forEach(admission => { %>
								<tr>
									<td class="centered"><%- num += 1 %></td>
									<td class="centered"><%- admission.admittedDate.toString().substring(3, 15) %></td>
									<td class="centered"><%- admission.ward %></td>
									<td class="centered"><%- admission.specialist %></td>
									<td class="centered"><a href="/admission/<%- admission._id %>">View</a></td>
									<td class="centered"><a href="/admission/<%- admission._id %>/edit">Edit</a></td>
									<td class="centered">
										<form action="/admission/<%- admission._id %>?_method=DELETE" method="POST">
											<button type="submit">Delete</button>
										</form>
									</td>
								</tr>
							<% }); %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</main>
<%- include('partials/footer')%> 