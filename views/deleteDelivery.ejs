<%- include('partials/header') %>
<%- include('partials/deleteSearch') %>
			<!-- Tab content -->
			<div class="tabcontent">
				<div id="delivery-content">
					<h2>DELIVERY</h2>
					<form class="referral-form">
						<fieldset class="referral-fieldset" action="/delivery/<%- delivery._id%>?_method=DELETE" method="POST">
							<legend>DETAILS</legend>
							<section class="inputs">
								<span><input type="text" id="deliveryID" value="<%- delivery.deliveryID %>" name="deliveryID"><br>
								<label for="deliveryID">Delivery ID</label></span>
		
								<span><input class="cls-cID" type="text" id="childID" name="childID" value="<%- delivery.childID %>"><br>
								<label class="cls-cID" for="childID">Child ID</label></span>
							
								<span><input class="cls-fID" type="text" id="fID" name="fatherID" value="<%- delivery.fatherID%>"><br>
								<label class="cls-fID" for="fID">FatherID</label></span>
		
								<span><input class="cls-mID" type="text" id="mID" name="motherID" value="<%- delivery.motherID %>"><br>
								<label class="cls-mID" for="mID">MotherID</label></span>
		
								<span><input type="text" id="place-of-delivery" name="placeOfDelivery" value="<%- delivery.placeOfDelivery %>"><br>
								<label for="place-of-delivery">Place of delivery</label></span>
		
								<span><input type="text" id="type-of-delivery" name="typeOfDelivery" value="<%- delivery.typeOfDelivery %>"><br>
								<label for="type-of-delivery">Type of delivery</label></span>
					
								<span><input type="text" id="attendant-at-birth" name="deliveredBy" value="<%- delivery.deliveredBy %>"><br>
								<label for="attendant-at-birth">Delivered By</label></span>

								<span><input type="text" id="centre" name="registrationCentre" value="<%- delivery.registrationCentre %>" readonly><br>
								<label for="centre">Delivery Centre</label></span>
							</section>

							<fieldset class="date-photo">
								<input type="text" id="delivery-registered-date" name="deliveryRegDate" value="<%- delivery.deliveryRegDate.toString().substring(0, 15) %>"><br></span>
								<span><label for="delivery-registered-date">Date registered for delivery</label><br>
								<input type="text" id="date-delivered" name="dateDelivered" value="<%- delivery.dateDelivered.toString().substring(0, 15) %>"><br></span>
								<span><label for="date-delivered">Delivery Date</label><br>
								<input type="text" id="time-of-delivery" name="timeOfDelivery" value="<%- delivery.timeOfDelivery %>"><br><span>
								<span><label for="time-of-delivery">Time of delivery</label><br>
							</fieldset>
	
							<span class="btn">
								<input type="submit" name="submit" value="Delete">
							</span>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
	</main>
<%- include('partials/footer')%> 