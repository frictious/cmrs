<%- include('partials/header') %>
<%- include('partials/data-entry') %>
			<!-- Tab content -->
			<div class="tabcontent">
				<div id="deceased-content">
					<h2>DECEASED</h2>
					<form class="deceased-form" action="/deceased/add" method="POST">
						<fieldset class="deceased-fieldset">
							<legend>DETAILS</legend>
							<section class="inputs">
								<span><input type="text" id="deceasedID" value=<%-`DE-${Date.now().toString().substring(6, 12)}`%> readonly name="deceasedID"><br>
								<label for="deceasedID">Deceased ID</label></span>
		
								<span><input class="cls-cID" type="text" id="childID" name="childID"><br>
								<label class="cls-cID" for="childID">Child ID</label><br></span><br>
							
								<span><input type="text" id="deceased-fname" name="firstName"><br>
								<label for="deceased-fname">First name</label></span>
		
								<span><input type="text" id="deceased-mname" name="otherName"><br>
								<label for="deceased-mname">Other name(s)</label></span>
		
								<span><input type="text" id="deceased-lname" name="lastName"><br>
								<label for="deceased-lname">Last name</label></span><br>
								
								<span><input type="text" id="deceased-gender" name="gender"><br>
								<label for="deceased-gender">Gender</label></span>
		
								<span><input type="text" id="deceased-nationality" name="nationality"><br>
								<label for="deceased-nationality">Nationality</label></span>
					
								<span><input type="text" id="deceased-tribe" name="tribe"><br>
								<label for="deceased-tribe">Tribe</label></span><br>
		
								<!-- <span><input type="text" id="deceased-edu-status"><br>
								<label for="deceased-edu-status">Educational level</label></span> -->
		
								<span><input type="text" id="cause-of-death" name="causeOfDeath"><br>
								<label for="cause-of-death">Cause of death</label></span>
		
								<span><input class="area-of-incident" type="text" id="area-of-incident" name="areaOfIncident"><br>
								<label class="area-of-incident" for="area-of-incident">Area of incident</label></span><br>

								<span><input type="text" id="reportedBy" name="reportedBy"><br>
								<label for="reportedBy">Reported By</label></span>
		
								<span><input class="assumed-area-of-incident" type="text" id="assumed-area-of-incidence" name="assumedAreaOfIncident"><br>
								<label class="assumed-area-of-incidence" for="assumed-area-of-incident">Assumed area of incidence</label></span>
		
								<span><input type="text" id="deceased-address" name="residenceAddress"><br>
								<label for="deceased-address">Residence address</label></span>
							</section>

							<fieldset class="date-photo">
								<span><input type="date" id="date-of-death" name="date"><br>
								<label for="date-of-death">Date of death</label></span>

								<span><input type="time" id="time-of-death" name="timeOfDeath"><br>
								<label for="time-of-death">Time of death</label></span>
							</fieldset>
	
							<span class="btn">
								<input type="submit" name="submit" value="Submit">
							</span>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
	</main>
<%- include('partials/footer')%> 