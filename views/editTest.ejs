<%- include('partials/header') %>
<%- include('partials/editSearch') %>
			<!-- Tab content -->
			<div class="updateTabcontent">
				<div id="visitors-content">
					<h2>TEST</h2>
					<form class="visitors-form" action="/test/<%- test._id %>/edit?_method=PUT" method="POST">
						<fieldset class="visitors-fieldset">
							<legend>DETAILS</legend>
							<section class="inputs">
								<span><input type="text" id="type" name="type" value="<%- test.type %>"><br>
								<label for="type">Test Type</label><br></span>
							
								<span><input class="cls-cID" type="text" id="requestedBy" name="requestedBy" value="<%- test.requestedBy %>"><br>
								<label class="cls-cID" for="hod">Requested By</label><br></span>
	
								<span><input type="text" id="childID" name="childID" value="<%- test.childID %>"><br>
								<label for="childID">Child ID</label></span><br>

								<br><br><label>Test Result</label><br>
								<iframe src="/files/<%- test.labResult %>" width="800px" height="500px"></iframe>
							</section>

							<fieldset class="date-photo">
								<section>
									<section id="photo">
										<iframe src="/files/<%- test.labResult %>"></iframe>
										<label for="c-browse-btn">Update Lab Result</label>
										<input id="c-browse-btn" type="file" name="labResult">
									</section>
								</section>
							</fieldset>
	
							<span class="btn">
								<input type="submit" name="submit" value="Update">
							</span>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
	</main>
<%- include('partials/footer')%> 