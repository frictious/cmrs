<%- include('partials/header') %>
<%- include('partials/data-entry') %>
			<!-- Tab content -->
			<div class="tabcontent">
				<div id="visitors-content">
					<h2>VISITORS</h2>
					<form class="visitors-form" action="/visitors/add" method="POST">
						<fieldset class="visitors-fieldset">
							<legend>DETAILS</legend>
							<section class="inputs">
								<span><input type="text" id="visitorsID" value=<%-`V-${Date.now().toString().substring(6, 12)}`%> name="visitorsID" readonly><br>
								<label for="visitorsID">Visitor ID</label><br></span>
							
								<span><input class="cls-cID" type="text" id="childID" name="childID"><br>
								<label class="cls-cID" for="childID">Child ID</label><br></span>
	
								<span><input type="text" id="visitors" name="name"><br>
								<label for="visitors">Visitors Name</label></span>

								<span><input type="text" id="visitors-purpose" name="purpose"><br>
								<label for="visitors-purpose">Purpose</label></span><br>
							</section>

							<section class="date-photo">
								<span><input type="date" id="visitors-date" name="visitDate"></span><br>
								<span><label for="visit-date">Date</label></span>
							</section>
	
							<span class="btn">
								<input type="submit" name="submit" value="Submit">
							</span>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
	</main>
<%- include('partials/footer')%> 